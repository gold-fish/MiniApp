.post-container{
    display: flex;
    flex-direction: column;
    margin-top:20rpx;
    margin-bottom: 40rpx;
    background-color: white;
    border-top:1px solid #ededed;
    border-bottom: 1px solid #ededed;
    padding-bottom: 5px;
}

.post-author-date{
    margin:10rpx 0 20rpx 10rpx;
    display: flex;
    flex-direction: row;
    height: 60rpx;
}
.post-author{
    width:60rpx;
    height: 60rpx;
    vertical-align: middle;
}
.post-date{
   margin-left:20rpx;
   font-size:26rpx;
   margin-top:17rpx;
}
.post-title{
    font-size: 34rpx;
    color:#333;
    font-weight: 600;
    margin-bottom: 10px;
    margin-left:10px;
}

.post-image{
    width:100%;
    height: 340rpx;
    margin-bottom:15px;
}

.post-content{
    color:#666;
    font-size:28rpx;
    margin-left:20rpx;
    margin-bottom: 20rpx;
    line-height: 40rpx;
}

.post-like{
    display: flex;
    flex-direction: row;
    line-height: 16px;
    margin-left:16px;
}

.post-like-image{
    height: 16px;
    width:16px;
    margin-right: 8px;
    vertical-align: middle;
}

.post-like-font{
    vertical-align: middle;
    margin-right: 20px;
}