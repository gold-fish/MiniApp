.container{
    display: flex;
    flex-direction: column;
}
.header-image{
    width:100%;
    height: 420rpx;
}
.audio{
    position: absolute;
    top:170rpx;
    left:50%;
    margin-left: -51rpx;
    width:102rpx;
    height: 110rpx;
    opacity: 0.8;
}
.author-container{
    width:100%;
    margin: 5rpx 0 5rpx 10rpx;
    display: flex;
    flex-direction: row;
}

.author-avatar{
    width:100rpx;
    height: 100rpx;
}

.author-text{
    margin-left:15rpx;
    font-size:30rpx;
    line-height: 100rpx;
    color:#666;
}
.title{
    margin-left:30rpx;
    margin-top: 20rpx;
    color:#666;
    font-size:40rpx;
    font-weight: bold;
}

.tool{
    width: 100%;
    margin-top:10rpx;
    height: 90rpx;
}
.share{
    float: right;
    margin-right:40rpx;
}
.share image{
    width:90rpx;
    height: 90rpx;
    margin-left: 20rpx;
}
.horizon{
    width: 100%;
    border-top:1px solid #e5e5e5;
    position: relative;
    top:45rpx;
    z-index: -99;
}

.detail{
    margin:20rpx 12rpx 10rpx 18rpx;
    color:#666;
    line-height: 44rpx;
    letter-spacing: 3rpx;
    font-size: 26rpx;
    text-indent: 40rpx;
}
